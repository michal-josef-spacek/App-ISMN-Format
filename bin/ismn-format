#!/usr/bin/env perl

use strict;
use warnings;

use App::ISMN::Format;

our $VERSION = 0.01;

# Run.
exit App::ISMN::Format->new->run;

# Print version.
sub VERSION_MESSAGE {
	print $VERSION."\n";
	exit 0;
}

